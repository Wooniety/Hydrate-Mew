<GoalsView>:
    FloatLayout:
        Label:
            text: 'CAT NAME HERE'
            font_size: 30
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
        Button:
            id:cat_button
            font_size: 20
            size_hint: None, None
            pos_hint: {'x': 0.4, 'y': 0.15}

            on_press: root.manager.current = 'cat'
            Image:
                source: "./game/resources/collar.jpg"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
        Label:
            text: 'How much water?'
            font_size: 20
            size_hint: None, None
            pos_hint: {'center_x': 0.1, 'center_y': 0.3}
        Label:
            text: 'How often?'
            font_size: 20
            size_hint: None, None
            pos_hint: {'center_x': 0.1, 'center_y': 0.2}