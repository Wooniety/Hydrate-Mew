<ShopView>:	
	FloatLayout:
		orientation: "vertical"
		#background
		canvas.before:
        Image:
            source: "./game/resources/backgroundorange.png"
            pos: self.pos
            size: self.size
		Label:
			text: 'Welcome to the Shop!'
			font_size: 50
			color: "#5C4033"
			font_name: './game/resources/Vividly-Regular.ttf'
			size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.85}
		Button:
			id:food_button
			text: "Food"
			font_size: 35
			font_name: './game/resources/Vividly-Regular.ttf'
			size: 400, 120
    		size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.6}
			on_press: root.manager.current = 'food'
		Button:
			id:toys_button
			text: "Toys"
			font_size: 35
			font_name: './game/resources/Vividly-Regular.ttf'
			size: 400, 120
    		size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.45}
			on_press: root.manager.current = 'toys'
		Button:
    		size_hint: None, None
			pos_hint: {'center_x': 0.1, 'center_y': 0.05}
			background_color: 0,0,0,0
			on_press: root.manager.current = 'catview'
			Image:
                source: "./game/resources/back.png"
				size: 70, 70
                center_x: self.parent.center_x
                center_y: self.parent.center_y

				
<FoodView>:
    FloatLayout:
		orientation: "vertical"
	#background
        canvas.before:
        Image:
            source: "./game/resources/backgroundblue.png"
            pos: self.pos
            size: self.size
        
		Label:
			text: 'Pawsome Bites'
			font_size: 50
			color: "#5C4033"
			font_name: './game/resources/Vividly-Regular.ttf'
			size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.85}
        SmoothButton:
            text: "Tuna Temptations"
			font_size: 35
			font_name: './game/resources/Vividly-Regular.ttf'
			size: 400, 120
    		size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            Image:
                source: './game/resources/food_tuna.png'
				x: self.parent.x + 10
                center_y: self.parent.center_y
		SmoothButton:
            text: "Kitty Kibbles"
			font_size: 35
			font_name: './game/resources/Vividly-Regular.ttf'
			size: 400, 120
    		size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.45}
            Image:
                source: './game/resources/food_kibble.png'
				x: self.parent.x + 10
                center_y: self.parent.center_y
		SmoothButton:
            text: "Feline Fizz"
			font_size: 35
			font_name: './game/resources/Vividly-Regular.ttf'
			size: 400, 120
    		size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.30}
            Image:
                source: './game/resources/food_fizz.png'
				x: self.parent.x + 10
                center_y: self.parent.center_y
		Button:
    		size_hint: None, None
			pos_hint: {'center_x': 0.1, 'center_y': 0.045}
			background_color: 0,0,0,0
			on_press:
                root.manager.transition.direction = "left"
                root.manager.current = "shop"
			Image:
                source: "./game/resources/back.png"
				size: 70, 70
                center_x: self.parent.center_x
                center_y: self.parent.center_y

