<ShopView>:	
	FloatLayout:
		orientation: "vertical"
		#background
		canvas.before:
        Image:
            source: "./game/resources/backgroundorange.png"
            pos: self.pos
            size: self.size
		Label:
			text: 'Welcome to the Shop'
			font_size: 30
			size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.85}
		Button:
			id:food_button
			text: "Food"
			size: 400, 120
    		size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.6}
			on_press: root.manager.current = 'food'
		Button:
			id:toys_button
			text: "Toys"
			size: 400, 120
    		size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.45}
			on_press: root.manager.current = 'toys'
		Button:
			id:toys_button
			text: "Back"
			size: 100, 120
    		size_hint: None, None
			pos_hint: {'center_x': 0.1, 'center_y': 0.1}
			on_press: root.manager.current = 'shop'

				
