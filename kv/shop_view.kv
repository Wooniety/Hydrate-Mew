<SmoothButton@Button>:
	background_color: (0,0,0,0)
	background_normal: ''
	back_color: (0,0,1,0)
    border_radius: [18]
	canvas.before:
		Color:
			rgba: self.back_color
		RoundedRectangle:
			size: self.size
			pos: self.pos
			radius: self.border_radius









