<WaterView>:
	FloatLayout:
		orientation: "vertical"
		#background
		canvas.before:
        Image:
            source: "./game/resources/backgroundblue.png"
            pos: self.pos
            size: self.size
		Label:
			text: 'Log your water'
			font_size: 30
			size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.85}
		Label:
			text: 'Total Water Consumed: '
			font_size: 30
			size_hint: None, None
			pos_hint: {'center_x': 0.5, 'center_y': 0.8}
		Button:
			text: "Cup - 250ml"
			size: 200, 440
    		size_hint: None, None
			pos_hint: {'center_x': 0.25, 'center_y': 0.5}
		Button:
			text: "Water Bottle - 750ml"
			size: 200, 440
    		size_hint: None, None
			pos_hint: {'center_x': 0.75, 'center_y': 0.5}
		Button:
			text: "Undo 750ml"
			size: 200, 100
    		size_hint: None, None
			pos_hint: {'center_x': 0.75, 'center_y': 0.3}
		Button:
			text: "Undo 250ml"
			size: 200, 100
    		size_hint: None, None
			pos_hint: {'center_x': 0.25, 'center_y': 0.3}