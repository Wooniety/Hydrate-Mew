<CatView>:
    FloatLayout:
        #background
        canvas.before:
        Image:
            source: "./game/resources/backgroundgreen.png"
            pos: self.pos
            size: self.size

        Label:
            text: 'Hydrate Mew!'
            font_size: 60
			color: "#5C4033"
			font_name: './game/resources/Vividly-Regular.ttf'
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.92}
            
        Image:
            source: "./game/resources/catleft.png"  
            background_color: 0,0,0,0
            size_hint: 1.2, 1.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}

        Image:
            source: "./game/resources/cathappy.png"  
            background_color: 0,0,0,0
            size_hint: 1.2, 1.2
            pos_hint: {'center_x': 0.5, 'center_y': 0.55}


        #buttons
        Button:
            id:shop_button
            font_size: 20
            size_hint: None, None
            background_color: 0,0,0,0
            pos_hint: {'x': 0.1, 'y': 0.1}

            on_press: root.manager.current = 'shop'
            Image:
                source: "./game/resources/shop.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id:setting_button
            font_size: 20
            background_color: 0,0,0,0
            size_hint: None, None
            pos_hint: {'x': 0.4, 'y': 0.1}

            on_press: root.manager.current = 'setting'
            Image:
                source: "./game/resources/collar.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id:goal_button
            font_size: 20
            background_color: 0,0,0,0
            size_hint: None, None
            pos_hint: {'x': 0.7, 'y': 0.1}

            on_press: root.manager.current = 'goal'
            Image:
                source: "./game/resources/calendar.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y



