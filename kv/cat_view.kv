<CatView>:
    FloatLayout:
        Label:
            text: 'This is Cat Game'
            font_size: 30
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        Button:
            id:shop_button
            text: 'Shop'
            font_size: 20
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.5}
            size_hint: 0.3, 0.3
            on_press: root.manager.current = 'shop'