<CatView>:
    FloatLayout:
        #background
        canvas.before:
        Image:
            source: "./game/resources/backgroundgreen.png"
            pos: self.pos
            size: self.size

        Label:
            text: 'This is Cat Game'
            font_size: 30
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.9}
            
        Image:
            source: "./game/resources/cathappy.jpg"
            size_hint: 1, 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}

        #buttons
        Button:
            id:shop_button
            font_size: 20
            size_hint: None, None
            pos_hint: {'x': 0.1, 'y': 0.15}

            on_press: root.manager.current = 'shop'
            Image:
                source: "./game/resources/shop.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id:cat_button
            font_size: 20
            size_hint: None, None
            pos_hint: {'x': 0.4, 'y': 0.15}

            on_press: root.manager.current = 'cat'
            Image:
                source: "./game/resources/collar.jpg"
                center_x: self.parent.center_x
                center_y: self.parent.center_y

        Button:
            id:goal_button
            font_size: 20
            size_hint: None, None
            pos_hint: {'x': 0.7, 'y': 0.15}

            on_press: root.manager.current = 'goal'
            Image:
                source: "./game/resources/calendar.jpg"
                center_x: self.parent.center_x
                center_y: self.parent.center_y



