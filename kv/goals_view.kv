<GoalsView>:
    FloatLayout:
        Label:
            text: 'This is Water View'
            font_size: 30
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
        Button:
            id:shop_button
            font_size: 20
            size_hint: None, None
            pos_hint: {'center_x': 0.5, 'center_y': 0.1}
            on_press: root.manager.current = 'shop'
            Image:
                source: "./game/resources/shop.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y